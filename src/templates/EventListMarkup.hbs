<ul class='event-list'>
  {{#each this}}
    <li class='event-item' id={{id}}>

      <div class='event-item__info'>
        <img
          class='event-item__img'
          src={{images.0.url}}
          alt={{name}}
          loading='lazy'
        />
        <p class='info-item__title'>{{name}}</p>
        <p class='info-item__date'>{{dates.start.localDate}}</p>
        <div class='info-group'>
          <div class='info-icon'>
            <svg
              class='icon-location'
              width='45'
              height='35'
              style='transform:scale(0.3); fill:white;'
            >
              <path
                d='M12.075 0C5.417 0 0 4.99 0 11.123 0 18.832 12.087 32 12.087 32S24.15 18.453 24.15 11.123C24.15 4.99 18.733 0 12.075 0zm3.643 14.38c-1.005.925-2.324 1.388-3.643 1.388s-2.639-.463-3.643-1.388c-2.009-1.85-2.009-4.861 0-6.712.973-.896 2.267-1.39 3.643-1.39s2.67.494 3.643 1.39c2.009 1.851 2.009 4.862 0 6.712z'
              ></path>

            </svg>
          </div>

          <p
            class='info-item__location'
          >{{_embedded.venues.0.city.name}},{{_embedded.venues.0.address.line1}}</p>
        </div>

      </div>
    </li>
  {{/each}}
</ul>